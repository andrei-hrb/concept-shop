include components/title

mixin item(img, title, price, link)
    div.item
        div.item__image
            span.item__image-bg(
                style="background-image: url(" + img + ");"
            )
        +title(
            "items",
            title,
            "__product"
        )
        div.item__price
            p!=price
        div.button.item__button.vertical-text
                div
                    a(
                        href=buttonURL
                    )="Află mai multe"
                div
                    a(
                        href=buttonURL
                    )="Află mai multe"


- const titleContentItems = ["Vizualizează câteva", "exemple din", "pachetele noastre"]
section#items.items.start
    +title(
        "items",
        titleContentItems,
        ""
    )
    div.items__list
