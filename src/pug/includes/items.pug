include components/title

- let right = false
- let index = 0
mixin item(img, title, price, link)
    - const classes = ["item"]
    - classes.push(right ? "item-right" : "item-left")
    - right = !right
    - index = index + 1
    div(
        class=classes
        id=`item-${index}`
    )
        div.item__image
            span.item__image-bg(
                style="background-image: url(" + img + ");"
            )
        div.item__text-wrapper
            +title(
                "item",
                title,
                `${index}__product`
            )
            div.item__price
                p!=price
        div.button.item__button.vertical-text
                div
                    a(
                        href=buttonURL
                    )="Află mai multe"
                div
                    a(
                        href=buttonURL
                    )="Află mai multe"


- const titleContentItems = ["Vizualizează câteva", "exemple din", "pachetele noastre"]
section#items.items
    +title(
        "items",
        titleContentItems,
        ""
    )
    div.items__list
        -let itemContentTitle = ["Produs", "exemplu", "#1"]
        +item(
            "/public/about-under.jpg",
            itemContentTitle,
            35,
            "#"
        )

        - itemContentTitle = ["Produs", "exemplu", "#2"]
        +item(
            "/public/about-under.jpg",
            itemContentTitle,
            105,
            "#"
        )

        - itemContentTitle = ["Produs", "exemplu", "#3"]
        +item(
            "/public/about-under.jpg",
            itemContentTitle,
            335,
            "#"
        )

        - itemContentTitle = ["Produs", "exemplu", "#4"]
        +item(
            "/public/about-under.jpg",
            itemContentTitle,
            5,
            "#"
        )
        div#items__lotus.items__lotus
            span.items__lotus-bg